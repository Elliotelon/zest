# fastlane/Fastfile

default_platform(:ios)

platform :ios do
  
  # ëª¨ë“  ë ˆì¸ ì‹¤í–‰ ì „ì— API Keyë¥¼ ì„¤ì •í•©ë‹ˆë‹¤.
  before_all do
    if !is_ci
      xcode_select("/Applications/Xcode.app")
    end
  end

  desc "ìœ ë‹› í…ŒìŠ¤íŠ¸ ì‹¤í–‰"
  lane :test do
    sh("swift test --package-path ../ZestCore")

    ENV["FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT"] = "100"
    ENV["FASTLANE_XCODEBUILD_SETTINGS_RETRIES"] = "5"
    
    scan(
      project: "Zest.xcodeproj", # Workspace ì—ëŸ¬ ë°©ì§€
      scheme: "Zest",
      destination: "platform=iOS Simulator,name=iPhone 16,OS=18.6",
      fail_build: true,
      prelaunch_simulator: true,
      clean: false
    )
  end

  desc "TestFlightì— ë² íƒ€ ë¹Œë“œ ë°°í¬"
  lane :beta do
    UI.user_error!("APP_STORE_CONNECT_API_KEY_ID missing") if ENV["APP_STORE_CONNECT_API_KEY_ID"].nil?

    # 0ï¸âƒ£ App Store Connect API Key ì¸ì¦ ì„¤ì •
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: false
    )

    # 1ï¸âƒ£ ë¹Œë“œ ë²ˆí˜¸ ìë™ ì¦ê°€
    increment_build_number(xcodeproj: "Zest.xcodeproj")

    # 2ï¸âƒ£ ì•„ì¹´ì´ë¸Œ ë¹Œë“œ (Manual Signing)
    build_app(
      project: "Zest.xcodeproj",
      scheme: "Zest",
      include_bitcode: false,
      export_method: "app-store",
      export_team_id: "A3GL2XU4F8",
      export_options: {
        provisioningProfiles: {
          "com.elliot.Zest" => "Zest-Ci"   # ìˆ˜ë™ í”„ë¡œí•„ ì´ë¦„
        }
      }
    )

    # 3ï¸âƒ£ TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end

  error do |lane, exception|
    puts "ğŸš¨ Fastlane error: #{exception.message}"
    # í•„ìš” ì‹œ Slack/Notion/Email ì•Œë¦¼ ì¶”ê°€ ê°€ëŠ¥
  end
end

default_platform(:ios)

platform :ios do
  before_all do
    xcode_select("/Applications/Xcode.app") unless is_ci
  end

  desc "ìœ ë‹› í…ŒìŠ¤íŠ¸ ì‹¤í–‰"
  lane :test do
    sh("swift test --package-path ../ZestCore")

    scan(
      project: "Zest.xcodeproj",
      scheme: "Zest",
      destination: "platform=iOS Simulator,name=iPhone 16,OS=18.6",
      fail_build: true,
      prelaunch_simulator: true,
      clean: false
    )
  end

  desc "TestFlightì— ë² íƒ€ ë¹Œë“œ ë°°í¬ (API Keyë§Œ ì‚¬ìš©)"
  lane :beta do
    UI.user_error!("APP_STORE_CONNECT_API_KEY_ID missing") if ENV["APP_STORE_CONNECT_API_KEY_ID"].nil?

    # 0ï¸âƒ£ App Store Connect API Key ì¸ì¦
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: false
    )

    # 1ï¸âƒ£ match ì‹¤í–‰ (SSH + readonly)
    match(
      type: "appstore",
      readonly: true,  # ì¸ì¦ì„œ ìƒì„± ì—†ì´ ë‹¤ìš´ë¡œë“œ
      git_branch: "master",
      git_url: ENV["MATCH_GIT_URL"],  # ë°˜ë“œì‹œ SSH í˜•ì‹: git@github.com:org/repo.git
      keychain_name: ENV.fetch("KEYCHAIN", "ci.keychain"),
      keychain_password: ENV.fetch("KEYCHAIN_PASSWORD", "ci_pass"),
      api_key: api_key,
      clone_branch_directly: true
    )
    
    # 2ï¸âƒ£ ë¹Œë“œ ë²ˆí˜¸ ìë™ ì¦ê°€
    latest_build_number = latest_testflight_build_number(app_identifier: "com.elliot.Zest")
    increment_build_number(
      xcodeproj: "Zest.xcodeproj",
      build_number: latest_build_number + 1
    )

    # 3ï¸âƒ£ ì•„ì¹´ì´ë¸Œ ë¹Œë“œ
    build_app(
      project: "Zest.xcodeproj",
      scheme: "Zest",
      include_bitcode: false,
      export_method: "app-store",
      export_team_id: "A3GL2XU4F8"
    )

    # 4ï¸âƒ£ TestFlight ì—…ë¡œë“œ
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      skip_submission: true
    )
  end

  error do |lane, exception|
    puts "ğŸš¨ Fastlane error: #{exception.message}"
  end
end

